<%= form_with(model: movie, local: true) do |form| %>
  <% if movie.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-3">
    <%= form.text_field :name, class:"form-control", placeholder:"Title" %>
  </div>

  <div class="my-3">
    <%= form.text_field :release_date, class:"form-control", placeholder:"Release date" %>
  </div>

  <div class="my-3">
    <%= form.text_field :director, class:"form-control", placeholder:"Director" %>
  </div>

  <div class="my-3">
    <%= form.number_field :durationInSeconds, class:"form-control", placeholder:"Duration in seconds" %>
  </div>

  <div class="my-3">
    <%= form.text_field :description, class:"form-control", placeholder:"Description" %>
  </div>

  <div class="my-3">
    <%= form.text_field :image_url, class:"form-control", placeholder:"Image URL" %>
  </div>

  <div class="my-3">
    <%= form.number_field :user_id, id: :movie_user_id, class:"form-control", value:current_user.id, type: :hidden %>
  </div>

  <div>
    <%= form.submit class:"btn btn-secondary"%>
  </div>
<% end %>
